{
  "name": "thedrewzers",
  "version": "1.0.0",
  "description": "Wedding website",
  "main": "index.js",
  "scripts": {
    "build": "tailwindcss -i ./src/input.css -o ./dist/css/tailwind.css -c ./tailwind.config.js --minify && cp ./dist/css/tailwind.css ./static/css/tailwind.css",
    "styles": "tailwindcss -i ./src/input.css -o ./dist/css/tailwind.css -c ./tailwind.config.js",
    "styles:watch": "tailwindcss -i ./src/input.css -o ./dist/css/tailwind.css -c ./tailwind.config.js --watch",
    "lighthouse": "lhci autorun --config=.lighthouse/lighthouserc.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/apkiernan/thedrewzers.git"
  },
